@page
@model ObligatorioProg2.Pages.altaAvisoTrabajoModel
@using ObligatorioProg2.Dominio;
@{}
<h1>Alta Aviso de Trabajo</h1>

<div class="row">
    <div class="col-8 offset-2">
        <form method="post">
            <div class="mb-3">
                <label for="fechaInicio">Fecha Inicio</label><input type="date" name="fInicio" value="" />
                <label for="fechaFin">Fecha Fin</label><input type="date" name="fFin" value="" />
                <label for="titulo">Titulo</label><input type="text" name="titulo" value="" />
                <label for="detalle">Detalle de la Publicidad</label>
                <textarea name="detalle" cols="80" rows="20" placeholder="Hata 1000 caracteres, para avisos de trajo GRATIS hasta 50 caracteres..."></textarea><br>
                <label for="selCliente">Seleccione Cliente</label>
                <select name="selCliente">
                    @foreach (Cliente c in Model.ClienteAListar)
                    {
                        <option value="@c.Codigo"> @c.Nombre ,  @c.Documento </option>
                    }
                </select>
                <button type="submit">Agregar Publicidad</button>
            </div>
        </form>
    </div>
</div>


